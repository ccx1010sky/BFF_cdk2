{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "js", 
    // "outDir": "dist",//cc change js to dist folder, tsc all .ts file to .js file and store in this dist folder.
  },
}